{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "author" : "__MSG_extAuthor__",
    "version": "0.3.0",
    "default_locale": "en",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "/js/background.js"
        ]
    },
    "browser_action": {
        "default_name": "Punycode Alert",
        "default_icon": "img/logo.png",
        "default_popup": "ui/popup.html"
    },
    "icons": {
        "16": "img/logo.png",
        "48": "img/logo.png",
        "128": "img/logo.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "manifest_version": 2
}
